---

import Container from "../../components/Container.astro";
import Layout from "../../layouts/Layout.astro";

const features: string[] = ['Direct messaging', 'Post and event creation', 'Comments section', 'Maps integration', 'Geofetching',
  'Full-text search', 'Notifications', 'Authentification'
]

const techStack: string[] = ['React Native', 'Expo', 'Firebase', 'Typesense']

---

<Layout title="iHope">
	<main class="relative pb-20 dark:text-white">

    <div aria-hidden="true" class="absolute -z-20 inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
      <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
      <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <Container>
      <a href="/#caseStudies" class="flex flex-row pt-20 cursor-pointer hover:text-primary space-x-2 items-center">
        <svg fill="currentColor" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg" class="w-5">
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M615.177 345 0 960.292l615.177 615.177 81.25-81.25-476.467-476.466H1920V902.83H219.96l476.467-476.58z" fill-rule="evenodd"></path> </g>
        </svg>
        <p class="text-lg z-10">Go back</p>
      </a>
      <div class="flex flex-row items-center space-x-4 pt-8">
        <img
            loading="lazy"
            width="200"
            height="200"
            src="../images/bee-favicon (1).png"
            alt="member photo"
            class="w-16 object-cover rounded-2xl"
          />
        <h1 class="text-6xl font-semibold">iHope</h1>
      </div>

      <div class="md:flex flex-row-reverse md:justify-between items-center md:items-start min-h-screen">
        <div class="md:5/12 lg:w-1/2 mt-16 md:-mt-20">
          <img
            src="../images/iHope.png"
            alt="image"
            loading="lazy"
            width=""
            height=""
            class="w-full"
          />
        </div>

        <div class="flex flex-col md:7/12 lg:w-1/2 md:pr-8">
          <p class="text-lg mt-8 md:mt-16">iHope mission is to connect volunteers to nonprofit organizations. It is a complete social app with advanced functionalities. </p>
          <h2 class="text-xl font-semibold mt-4">Features:</h2>
          <ul class="list-disc mt-1 ml-4">
            { features.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <h2 class="text-xl font-semibold mt-4">Tech stack:</h2>
          <ul class="list-disc mt-1 ml-4">
            { techStack.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <h2 class="text-xl font-semibold mt-8">Try it out yourself!</h2>
          <div class="flex flex-row space-x-4 mt-4">
            <a href="https://testflight.apple.com/join/XlQvH63H" target="_blank" class="z-10">
                <img
                  loading="lazy"
                  width="200"
                  height="200"
                  src="../download-on-the-app-store.png"
                  alt="member photo"
                  class="w-32 object-cover"
                />
            </a>
            <a href="https://play.google.com/store/apps/details?id=com.andreirhadu.ihope" target="_blank" class="z-10">
              <img
                loading="lazy"
                width="200"
                height="200"
                src="../get-it-on-gp.png"
                alt="member photo"
                class="w-[150px] object-cover"
              />
            </a>
          </div>
        </div>

      </div>
    </Container>
	</main>
</Layout>