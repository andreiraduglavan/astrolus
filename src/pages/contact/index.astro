---
import Container from "../../components/Container.astro";
import Layout from "../../layouts/Layout.astro";

fetch(
  'https://purplr-server.onrender.com/start',
  { method: 'POST'}
).then().catch(console.error)

---

<Layout>
  <main class="md:pt-20">
    <div aria-hidden="true" class="absolute inset-0 -z-20 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
      <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
      <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <Container>
      <div class="container py-5 lg:py-8 mx-auto max-w-screen-xl">
        <div class="grid my-10 md:grid-cols-2">
          <div class="my-10">
            <h2 class="text-2xl font-semibold dark:text-white">
              Schedule a call
            </h2>
            <p class="max-w-sm mt-5 dark:text-white">
              Fill up the form to schedule a call or contact us directly by email, whatsapp or phone call.
            </p>
            <div class="mt-5">
              <div class="flex items-center mt-2 space-x-2 text-dark-600 dark:text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:andrei1.radu93@gmail.com">andrei1.radu93@gmail.com</a>
              </div>
              <div class="flex items-center mt-2 space-x-2 text-dark-600 dark:text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                    </path>
                  </svg>
                  <a href="tel:+40770381895">
                    +40770381895 (Available from 7am to 7pm UTC+0)
                  </a>
                </div>
                <div class="flex items-center mt-2 space-x-2 text-dark-600 dark:text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>
                    Bucharest, Romania
                  </span>
                </div>
              </div>
          </div>
          <div>
            <form class="mb-10 md:my-10" action="/contact/succes">
              <div class="mb-5">
                <input required type="text" placeholder="Full Name" autocomplete="false" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white rounded-md outline-none dark:placeholder:text-gray-200 dark:bg-gray-900   focus:ring-4  border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0" name="name">
              </div>
              <div class="mb-5">
                <input required id="email_address" type="email" placeholder="Email Address" name="email" autocomplete="false" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white rounded-md outline-none dark:placeholder:text-gray-200 dark:bg-gray-900   focus:ring-4  border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0">
              </div>
              <div class="mb-5">
                <input required id="email_address" type="text" placeholder="Time when you are available (provide more options if possible)" name="time" autocomplete="false" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white rounded-md outline-none dark:placeholder:text-gray-200 dark:bg-gray-900   focus:ring-4  border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0">
              </div>
              <div class="mb-3">
                <textarea required name="description" placeholder="Brief decription of the app you want to build" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white dark:placeholder:text-gray-200 dark:bg-gray-900   rounded-md outline-none  h-36 focus:ring-4  border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0"></textarea>
              </div>
              <button type="submit" class="relative flex h-9 w-full items-center justify-center px-4 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max">
                <span class="relative text-sm font-semibold text-white">
                  Schedule a call
                </span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>